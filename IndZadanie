uses crt;

var a,b,c,mn,mx:integer;
begin
clrscr;
writeln('Вводите по 3 целых числа, окончание ввода все числа равны');
repeat
write('a=');readln(a);
write('b=');readln(b);
write('c=');readln(c);
if(a<>b) then
 begin
  if a>b then mx:=a else mx:=b;
  if c>mx then mx:=c;
  if a<b then mn:=a else mn:=b;
  if c<mn then mn:=c;
  writeln('Мин=',mn,' макс=',mx);
 end;
until(a=b)and(a=c);
write('Нажмите любую клавишу');
readkey
end.
